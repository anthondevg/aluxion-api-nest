// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  name       String
  password   String
  provider   String?
  resetToken String?
  expiryDate DateTime?
}

model Image {
  id          Int     @id @default(autoincrement())
  url         String  @unique
  title       String
  description String?
}
